<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" auto-import="true" >

  <class name="ArqTransfer.Dominio.Entidades.Usuario,  ArqTransfer.Dominio" lazy="false" table="Usuario">
    
    <id name="Id"
        column="Id"
        type="Int64">
      <generator class="native"/>
    </id>
    <property
      name="Email"
      column="Email"
      type="String"
      length="50"
      not-null="true"/>
    <property
      name="Senha"
      column="Senha"
      type="String"
      length="10"
      not-null="true"/>
    <property
      name="Nome"
      column="Nome"
      type="String"
      length="50"
      not-null="true"/>
    <property
      name="PodeCriarPasta"
      column="PodeCriarPasta"
      type="bool"
      not-null="true"/>
  </class>
</hibernate-mapping>
